{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "yana",
  "version": "0.4.0",
  "identifier": "com.yana.dev",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "yana",
        "width": 1200,
        "height": 800,
        "minHeight": 600,
        "minWidth": 800,
        "decorations": false,
        "shadow": true,
        "hiddenTitle": true
      }
    ],
    "security": {
      "csp": "default-src 'self' ipc: http://ipc.localhost asset: http://asset.localhost blob:; script-src 'self' 'unsafe-inline' 'unsafe-eval' blob: http://asset.localhost; img-src * data: blob: asset: http://asset.localhost",
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$RESOURCE/**",
          "$APP_CONFIG/**",
          "**/plugins/**",
          "$APPDATA/**"
        ]
      }
    }
  },
  "bundle": {
    "externalBin": ["bin/gif2webp"],
    "active": true,
    "targets": "all",
    "resources": {
      "../src/plugins/**/*.js": "plugins/"
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Utility",
    "shortDescription": "图床管理工具",
    "longDescription": "yana 是一款开源的图床管理工具，内置多种图床服务以及压缩功能，支持自定义插件，帮助用户轻松上传和管理图片。",
    "windows": {
      "wix": {
        "language": "zh-CN"
      },
      "nsis": {
        "languages": ["SimpChinese", "English"],
        "displayLanguageSelector": true
      }
    }
  }
}
