{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "yana",
  "version": "0.1.0",
  "identifier": "com.yana.dev",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "yana",
        "width": 800,
        "height": 600,
        "minHeight": 600,
        "minWidth": 800,
        "decorations": false,
        "shadow": true,
        "hiddenTitle": true
      }
    ],
    "security": {
      "csp": "default-src 'self' ipc: http://ipc.localhost asset: http://asset.localhost blob:; script-src 'self' 'unsafe-inline' 'unsafe-eval' blob: http://asset.localhost; img-src * data: blob: asset: http://asset.localhost",
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$RESOURCE/**",
          "$APP_CONFIG/**",
          "**/plugins/**"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": {
      "../src/plugins/**/*.js": "plugins/"
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
